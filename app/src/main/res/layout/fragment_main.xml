<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/divide">

    <com.insightsurface.lib.widget.bar.TopBar
        android:id="@+id/gradient_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:left_text=""
        app:right_background="@drawable/ic_user"
        app:right_text=""
        app:title_text="本地视频"
        app:title_textColor="@color/main_text_color"></com.insightsurface.lib.widget.bar.TopBar>

    <include
        layout="@layout/activity_only_refresh_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gradient_bar"
        android:layout_marginTop="5dp"></include>
</RelativeLayout>