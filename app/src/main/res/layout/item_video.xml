<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.insightsurfface.videocrawler.widget.imageview.WrapHeightImageView
        android:id="@+id/video_thumbnail_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"></com.insightsurfface.videocrawler.widget.imageview.WrapHeightImageView>

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_thumbnail_iv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="10dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="13sp"></TextView>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_thumbnail_iv"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="视频标题"
        android:textColor="@color/main_text_color"
        android:textSize="17sp"/>
</RelativeLayout>